<h1>New User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %><br>
      <%= f.text_field :name %><br>

      <%= f.label :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label :password %><br>
      <%= f.password_field :name %><br>

      <%= f.submit "Create my Account", class: "btn btn-primary" %>
  <% end %>

  </div>
</div>

<%= link_to 'Back', users_path %>
